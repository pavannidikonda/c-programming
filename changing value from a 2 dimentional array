#include<stdio.h>
int main()
{
 int arr[100][100],i,j,n,m,r,c;
 printf("enter the no of rows:");
 scanf("%d",&n);
 printf("enter the no of columns:");
 scanf("%d",&m);
 for(i=0;i<n;i++)
 {
     for(j=0;j<m;j++)
     {
         printf("enter the values:");
         scanf("%d",&arr[i][j]);
     }
 }   
 for(i=0;i<n;i++)
 {
     for(j=0;j<m;j++)
     {
         printf("%d",arr[i][j]);
     }printf("\n");
 }
 printf("which row having wrong value:");
 scanf("%d",&r);
 printf("column having wrong value :");
 scanf("%d",&c);
 printf("the actual value:");
 scanf("%d",&arr[r-1][c-1]);
 for(i=0;i<n;i++)
 {
     for(j=0;j<m;j++)
     {
         printf("%d",arr[i][j]);
     }printf("\n");
 }
   }
